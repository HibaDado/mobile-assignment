<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft translucent base -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CCFFFFFF"/> <!-- semi-transparent white -->
            <corners android:topLeftRadius="20dp" android:topRightRadius="20dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
        </shape>
    </item>

    <!-- Slight top-to-bottom gradient to give depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#20FFFFFF"
                android:endColor="#00FFFFFF"/>
            <corners android:topLeftRadius="20dp" android:topRightRadius="20dp" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
        </shape>
    </item>

    <!-- Very faint top border -->
    <item android:top="0dp">
        <shape android:shape="rectangle">
            <size android:height="1dp"/>
            <solid android:color="#16000000"/>
            <corners android:topLeftRadius="20dp" android:topRightRadius="20dp"/>
        </shape>
    </item>

</layer-list>
