<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F3FF">

    <!-- Phone Mockup Background -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        android:backgroundTint="#FFFFFF">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Scrollable Content -->
            <ScrollView
                android:id="@+id/scrollContent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/bottomNavContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="60dp">

                    <!-- Profile Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Profile Image -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            app:cardCornerRadius="26dp"
                            app:cardUseCompatPadding="false"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/ivProfile"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/profile1" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Erica Hawkins"
                                android:textColor="#111111"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="6th grade"
                                android:textColor="#9B9B9B"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <!-- Notification button (white rounded) -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="0dp"
                            android:foreground="?attr/selectableItemBackgroundBorderless">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:src="@drawable/notifications"
                                app:tint="#00C853" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="18dp" />

                    <!-- Search Bar -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="#F5F5F9">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingStart="18dp"
                            android:paddingEnd="18dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/search"
                                app:tint="#B3B3B8" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                android:text="Search"
                                android:textColor="#C4C4C8"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="24dp" />

                    <!-- Next class -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Next class"
                            android:textColor="#111111"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See all"
                            android:textColor="#9B9B9B"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Next Class Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        app:cardCornerRadius="26dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="#E6E6FF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="18dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <!-- Calculator pill -->
                                <androidx.cardview.widget.CardView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="14dp"
                                    app:cardElevation="0dp"
                                    android:backgroundTint="#FFFFFF">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="10dp"
                                        android:src="@drawable/calculator"
                                        app:tint="#5D5FEF" />
                                </androidx.cardview.widget.CardView>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="0dp"
                                    android:layout_weight="1" />

                                <!-- Homework chip with black circle -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:paddingStart="14dp"
                                    android:paddingEnd="10dp"
                                    android:paddingTop="7dp"
                                    android:paddingBottom="7dp"
                                    android:background="@drawable/shape_chip">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Homework"
                                        android:textColor="#000000"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />

                                    <View
                                        android:backgroundTint="#000000"
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_marginStart="8dp"
                                        android:background="@drawable/shape_circle_black" />
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="Basic mathematics"
                                android:textColor="#111111"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="Today, 08:15am"
                                android:textColor="#6B6B6F"
                                android:textSize="13sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14dp"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    app:cardCornerRadius="16dp"
                                    app:cardUseCompatPadding="false"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:id="@+id/ivProfile2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/profile1" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="Jane Cooper"
                                    android:textColor="#111111"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="26dp" />

                    <!-- Events Title -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Events"
                            android:textColor="#111111"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See all"
                            android:textColor="#9B9B9B"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Event 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:gravity="center_vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="110dp"
                                android:layout_height="90dp"
                                app:cardCornerRadius="18dp"
                                app:cardUseCompatPadding="false"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/showimg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/cshow" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Comedy show"
                                    android:textColor="#111111"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="26 Apr, 6:30pm"
                                    android:textColor="#7A7A7E"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                app:cardCornerRadius="17dp"
                                app:cardElevation="0dp"
                                android:backgroundTint="#FFF0FA">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="8dp"
                                    android:src="@drawable/heart"
                                    app:tint="#FF6B9D" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Event 2 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="140dp"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="#FFFFFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:gravity="center_vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="110dp"
                                android:layout_height="90dp"
                                app:cardCornerRadius="18dp"
                                app:cardUseCompatPadding="false"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/danceimg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/dance" />
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dance evening"
                                    android:textColor="#111111"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="2 May, 5:40pm"
                                    android:textColor="#7A7A7E"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <androidx.cardview.widget.CardView
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                app:cardCornerRadius="17dp"
                                app:cardElevation="0dp"
                                android:backgroundTint="#E7FFF8">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="8dp"
                                    android:src="@drawable/heart"
                                    app:tint="#00C4B4" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </ScrollView>

            <!-- Bottom Navigation (floating, rounded) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/bottomNavContainer"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="18dp"
                app:cardCornerRadius="32dp"
                app:cardElevation="10dp"
                android:backgroundTint="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="22dp">

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:src="@drawable/home"
                        app:tint="#000000" />

                    <Space
                        android:layout_width="38dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/calendar"
                        app:tint="#B3B3B8" />

                    <Space
                        android:layout_width="26dp"
                        android:layout_height="1dp" />

                    <!-- Center add button -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:cardCornerRadius="22dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="#000000">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:src="@drawable/add"
                            app:tint="#FFFFFF" />
                    </androidx.cardview.widget.CardView>

                    <Space
                        android:layout_width="26dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/favorite"
                        app:tint="#B3B3B8" />

                    <Space
                        android:layout_width="26dp"
                        android:layout_height="1dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/person"
                        app:tint="#B3B3B8" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>