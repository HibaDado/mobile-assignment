<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundMain"
    android:fitsSystemWindows="true">

    <!-- MAIN CONTENT (scrolls) -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="70dp"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TOP BAR: avatar + Hi, Sarah! + icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/avatar_sample"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bg_avatar_circle"
                    android:padding="2dp"/>

                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Hi, Sarah!"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <ImageButton
                    android:id="@+id/btnBell"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/notifications"
                    android:tint="@color/iconBlue"/>

                <ImageButton
                    android:id="@+id/btnCalendar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="16dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/calendar"
                    android:tint="@color/iconBlue"/>
            </LinearLayout>

            <!-- TABS: Wait now / Booking -->
            <LinearLayout
                android:id="@+id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tabWaitNow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Wait now"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/tabBooking"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Booking"
                        android:textSize="16sp"
                        android:textColor="@android:color/darker_gray"/>
                </LinearLayout>

                <!-- Thin full-width line under tabs (like image 3) -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/transparent"/>

                <!-- Blue indicator under the currently selected tab (Wait now) -->
                <View
                    android:id="@+id/tabIndicator"
                    android:layout_width="80dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="-3dp"
                    android:layout_marginLeft="55dp"
                    android:background="@android:color/holo_blue_bright"/>
            </LinearLayout>

            <!-- SEARCH / DESTINATION CARD -->
            <LinearLayout
                android:id="@+id/searchCard"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_card_rounded"
                android:gravity="center_vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/location"
                    android:tint="@color/iconBlue"/>

                <TextView
                    android:id="@+id/tvWhereTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Where to?"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp"/>
            </LinearLayout>

            <!-- All our services title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="All our services"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

            <!-- Services row: horizontally scrollable blue cards -->
            <HorizontalScrollView
                android:id="@+id/servicesRowScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/servicesRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Card 1 -->
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="12dp"
                        android:orientation="vertical"
                        android:background="@drawable/bg_service_blue"
                        android:gravity="center_horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/car"
                            android:contentDescription="@string/app_name"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Rent a car"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <!-- Card 2 -->
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginEnd="12dp"
                        android:orientation="vertical"
                        android:background="@drawable/bg_service_blue"
                        android:gravity="center_horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/train"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Trains"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <!-- Card 3 -->
                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical"
                        android:background="@drawable/bg_service_blue"
                        android:gravity="center_horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/box"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Delivery"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <!-- (Optional) more cards can be added here in the same pattern -->

                </LinearLayout>
            </HorizontalScrollView>
            <!-- Featured title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Featured"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

            <!-- Horizontal featured cards -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Featured Card 1 -->
                    <LinearLayout
                        android:layout_width="260dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="16dp"
                        android:orientation="vertical"
                        android:background="@drawable/bg_featured_green"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/redcar"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Save more CO2"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed et ex ante."
                            android:textSize="12sp"
                            android:maxLines="2"/>
                    </LinearLayout>

                    <!-- Featured Card 2 -->
                    <LinearLayout
                        android:layout_width="260dp"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:background="@drawable/bg_featured_yellow"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bicycle"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Arrive on time"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed et ex ante."
                            android:textSize="12sp"
                            android:maxLines="2"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

    <!-- FINAL BOTTOM NAVBAR (ONE VIEW, LIKE IMAGE 3) -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="8dp">

        <!-- Home (selected) -->
        <LinearLayout
            android:id="@+id/itemHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                android:tint="@color/iconBlue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="10sp"
                android:textColor="@color/iconBlue"/>
        </LinearLayout>

        <!-- Services -->
        <LinearLayout
            android:id="@+id/itemServices"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/services"
                android:tint="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Services"
                android:textSize="10sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Activity -->
        <LinearLayout
            android:id="@+id/itemActivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/activity"
                android:tint="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity"
                android:textSize="10sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:id="@+id/itemSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/settings"
                android:tint="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="10sp"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>